<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title><%= title %></title>

    <!-- Bootstrap Core CSS -->
    <link href="<%= static_url %>/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="<%= static_url %>/css/sb-admin-2.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="<%= static_url %>/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    <!-- jQuery -->
    <script src="<%=static_url%>/bower_components/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="<%=static_url%>/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <style type="text/css">
        tr:hover{

        }
    </style>
</head>

<body>

<div class="container">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-5">
            <ol class="breadcrumb">
                <li><a href="/admin">主页</a></li>
                <li class="active">小组</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="list-group col-md-3">
            <%
            for(var i=0; i<groupRows.length; i++){
            %>
            <a href="/admin/group/<%=groupRows[i].id%>" class="list-group-item"><%=groupRows[i].groupName%></a>
            <%
            }
            %>
        </div>
        <div class="col-md-7">
            <div class="panel panel-default">
                <div class="panel-heading">小组成员&emsp;
                    <div class="btn-group" role="group" aria-label="...">
                        <button type="button" class="btn btn-default btn-sm">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>新增
                        </button>
                        <button type="button" class="btn btn-default btn-sm">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>修改
                        </button>
                        <button type="button" class="btn btn-default btn-sm">
                            <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>删除
                        </button>
                    </div>
                    <a href="<%=groupInfo.id%>/edit" type="button" class="btn btn-default btn-sm">
                        <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
                        进入笔记
                    </a>
                </div>

                <!-- Table -->
                <table class="table">
                    <thead>
                        <tr>
                            <th>选择</th>
                            <th>姓名</th>
                            <th>微信号</th>
                            <th>电话号码</th>
                            <th>加入时间</th>
                            <th>是否确认</th>
                        </tr>
                    </thead>
                    <%
                    for (var j=0;j<groupUser.length;j++){
                    %>
                    <tr>
                        <td>
                            <input type="checkbox" name="groupUserId" value="<%=groupUser[j].id%>">
                        </td>
                        <td><%=groupUser[j].name%></td>
                        <td><%=groupUser[j].wechat%></td>
                        <td><%=groupUser[j].tel%></td>
                        <td><%=groupUser[j].createTime%></td>
                        <td><%=groupUser[j].status=1?'已确认':'未确认'%></td>
                    </tr>
                    <%
                    }
                    %>
                </table>
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>
<script type="text/javascript">
    $(function(){
        $('.table tr').hover(function(){
            $(this).addClass('active');
        },function(){
            $(this).removeClass('active');
        });

        $('.table tr').click(function(e){
            if (e.target.nodeName != 'INPUT'){
                var checkbox = $(this).find('input:checkbox')[0];

                if (checkbox.checked){
                    checkbox.checked = false;
                }else{
                    checkbox.checked = true;
                }
            }
        });
    });
</script>
</body>
</html>
